{
	"name": "app",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"modulize-wasm": "node ../rust/modulize.mjs",
		"wasm": "wasm-pack build ../rust --target web && yarn modulize-wasm",
		"wasm:dev": "wasm-pack build --dev --no-opt ../rust --target web && yarn modulize-wasm",
		"build": "yarn wasm && vite build",
		"preview": "vite preview",
		"test": "yarn test:integration && yarn test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@iconify/svelte": "^4.0.2",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.13",
		"@types/eslint": "^9.6.0",
		"@types/lodash": "^4",
		"autoprefixer": "^10.4.19",
		"colord": "^2.9.3",
		"eslint": "^9.0.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "^8.4.38",
		"svelte": "^4.2.7",
		"svelte-awesome-color-picker": "^3.1.3",
		"svelte-check": "^3.6.0",
		"svelte-headless-table": "^0.18.2",
		"svelte-portal": "^2.2.1",
		"svelte-render": "^2.0.1",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"type": "module",
	"dependencies": {
		"bits-ui": "^0.21.13",
		"clsx": "^2.1.1",
		"lodash": "^4.17.21",
		"mode-watcher": "^0.4.1",
		"paneforge": "^0.0.5",
		"svelte-radix": "^1.1.0",
		"svelte-sonner": "^0.3.27",
		"tailwind-merge": "^2.4.0",
		"tailwind-variants": "^0.2.1"
